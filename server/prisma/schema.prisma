// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Character {
  id          String   @id @unique
  name        String
  role        String
  health      Int      @default(30)
  age         String
  race        String
  languages   String   @default("Nehum Registro")
  affiliation String   @default("Nehum Registro")
  previous    String   @default("Nehum Registro")
  defect      String   @default("Nehum Registro")
  ideas       String   @default("Nehum Registro")
  personality String   @default("Nehum Registro")
  history     String   @default("Nehum Registro")
  xp          Int      @default(0)
  gold        Int      @default(50)
  created_at  DateTime @default(now())

  CharacterAttributes CharacterAttributes[]
  CharacterExpertise  CharacterExpertise[]
}

model Items {
  id          Int      @id @unique @default(autoincrement())
  name        String
  description String
  created_at  DateTime @default(now())
}

model Attributes {
  id         Int      @id @unique @default(autoincrement())
  name       String   @unique
  created_at DateTime @default(now())

  CharacterAttributes CharacterAttributes[]
}

model Expertise {
  id         Int      @id @unique @default(autoincrement())
  name       String   @unique
  created_at DateTime @default(now())

  CharacterExpertise CharacterExpertise[]
}

model CharacterAttributes {
  id           String @id @default(uuid())
  characterId  String
  attributesId Int
  value        Int    @default(0)

  character Character  @relation(fields: [characterId], references: [id])
  attribute Attributes @relation(fields: [attributesId], references: [id])
}

model CharacterExpertise {
  id          String @id @default(uuid())
  characterId String
  expertiseId Int
  value       Int    @default(0)

  character Character @relation(fields: [characterId], references: [id])
  expertise Expertise @relation(fields: [expertiseId], references: [id])
}
