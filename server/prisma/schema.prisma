// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model character {
  id          String   @id @unique
  name        String
  health      Int?     @default(30)
  age         String
  race        String
  laguages    String?  @default("Nehum Registro")
  affiliation String?  @default("Nehum Registro")
  previous    String?  @default("Nehum Registro")
  defect      String?  @default("Nehum Registro")
  ideas       String?  @default("Nehum Registro")
  personality String?  @default("Nehum Registro")
  history     String?  @default("Nehum Registro")
  xp          Int      @default(0)
  gold        Int      @default(50)
  created_at  DateTime @default(now())
}

model Items {
  id          Int      @id @unique @default(autoincrement())
  description String
  usage       String
  created_at  DateTime @default(now())
}

model Attributes {
  id         Int      @id @unique @default(autoincrement())
  name       String
  created_at DateTime @default(now())
}

model Expertise {
  id         Int      @id @unique @default(autoincrement())
  name       String
  created_at DateTime @default(now())
}
