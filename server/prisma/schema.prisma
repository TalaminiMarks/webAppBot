// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model character {
  id         String   @id @unique
  name       String
  role       String
  initial    String
  created_at DateTime @default(now())
}
